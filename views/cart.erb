<h1>Корзина</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>№</th>
			<th>Наименование</th>
			<th>Цена</th>
			<th>Количество</th>
			<th>Итого</th>
		</tr>
	</thead>
	<tbody>
		<% i=1 %>
		<% sum=0 %>
		<% @aa.each do |item| %>
			<tr>
				<th>
					<%= i %>
				</th>
				<td>
					<%= item[:name] %>
				</td>
				<td>
					<%= "%6.2f" % item[:price] %> грн.
				</td>
				<td>
					<%= item[:quantity] %>
				</td>
				<td>
					<%= "%6.2f" % item[:sumprice] %> грн.
				</td>
			</tr>
			<% sum += item[:sumprice] %>
			<% i+=1 %>
		<% end %>
	</tbody>	
</table>

<strong>Общая сумма: <%= "%6.2f" % sum %> грн.</strong>