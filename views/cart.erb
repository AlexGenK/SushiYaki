<!-- вид - корзина -->

<h1>Корзина</h1>

<!-- таблица с заказами -->
<table class="table table-striped">
	<thead>
		<tr>
			<th>№</th>
			<th>Наименование</th>
			<th>Цена</th>
			<th>Количество</th>
			<th>Итого</th>
		</tr>
	</thead>
	<tbody>
		<% sum=0 %>
		<% $aa.each do |item| %>
			<tr>
				<th>
					<%= item[:n] %>
				</th>
				<td>
					<%= item[:product].title %>
				</td>
				<td>
					<% price=item[:product].price/100 %>
					<%= "%6.2f" %  price %> грн.
				</td>
				<td>
					<%= item[:quantity] %>
				</td>
				<td>
					<% sumprice= price*item[:quantity] %>
					<%= "%6.2f" % sumprice %> грн.
				</td>
			</tr>
			<% sum += sumprice %>
		<% end %>
	</tbody>	
</table>

<strong>Общая сумма: <%= "%6.2f" % sum %> грн.</strong>
</br>
</br>
